{
    "$schema": "./schema.json",
    "recipe-name": "sample-recipe",
    "prepare-recipe-directory": true,
    "modules": [
        {
            "module-name": "hoge",
            "recipe-module-name": "recipe-hoge",
            "input-path": [
                "{input.0}",
                "{input.1}"
            ],
            "arguments": [
                {"arg1": "arg1"}, 
                {"arg2": "{recipe_dir}"}
            ]
        },
        {
            "module-name": "fuga",
            "recipe-module-name": "recipe-fuga",
            "input-path": [
                "{recipe-hoge.result.1}",
                "{input.2.somekey}"
            ],
            "arguments": [
                {"arg3": "arg3"}, 
                {"arg4": "hugyaaa"}
            ]
        }
    ],
    "output": [
        "{recipe-hoge.result}",
        "{recipe-fuga.result.2}"
    ]
}