{
    "$schema": "./schema.json",
    "name": "sample-recipe",
    "description": "sample recipe",
    "prepare-recipe-directory": true,
    "modules": [
        {
            "module-name": "hoge",
            "recipe-module-name": "recipe-hoge",
            "arguments": [
                "{input.0}",
                "{input.1}"
            ]
        },
        {
            "module-name": "fuga",
            "recipe-module-name": "recipe-fuga",
            "arguments": [
                "{recipe-hoge.output.1}",
                "{input.2.somekey}"
            ]
        }
    ],
    "output": [
        "{recipe-hoge.output}",
        "{recipe-fuga.output.2}"
    ]
}